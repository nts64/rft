<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/sbe/rc4"
                   package="com.nts.rft.sbe"
                   id="1"
                   version="1"
                   semanticVersion="5.2"
                   description="Rft schema"
                   byteOrder="littleEndian">
    <types>
        <composite name="messageHeader" description="Message identifiers and length of message root">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="templateId" primitiveType="uint16"/>
            <type name="schemaId" primitiveType="uint16"/>
            <type name="version" primitiveType="uint16"/>
        </composite>
        <composite name="groupSizeEncoding" description="Repeating group dimensions">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="numInGroup" primitiveType="uint16"/>
        </composite>
        <composite name="varDataEncoding">
            <type name="length" primitiveType="uint16"/>
            <type name="varData" primitiveType="uint8" length="0" characterEncoding="UTF-8"/>
        </composite>
    </types>
    <types>
        <type name="Term" primitiveType="uint64"/>
        <type name="NodeId" primitiveType="uint8"/>
        <type name="LogIndex" primitiveType="uint64"/>
        <enum name="BooleanType" encodingType="uint8">
            <validValue name="False">0</validValue>
            <validValue name="True">1</validValue>
        </enum>
    </types>
    <types>
        <type name="CorrelationId" primitiveType="uint64"/>
        <type name="AccountId" primitiveType="uint64"/>
        <type name="Amount" primitiveType="uint64"/>
    </types>
    
    
    <sbe:message name="RequestVote" id="1">
        <field name="term" id="2" type="Term"/>
        <field name="candidateId" id="3" type="NodeId"/>
        <field name="lastLogIndex" id="4" type="LogIndex"/>
        <field name="lastLogTerm" id="5" type="Term"/>
    </sbe:message>
    <sbe:message name="RequestVoteResponse" id="6">
        <field name="term" id="7" type="Term"/>
        <field name="voteGranted" id="8" type="BooleanType"/>
    </sbe:message>
    <sbe:message name="AppendEntries" id="9">
        <field name="term" id="10" type="Term"/>
        <field name="leaderId" id="11" type="NodeId"/>
        <field name="prevLogIndex" id="12" type="LogIndex"/>
        <field name="prevLogTerm" id="13" type="Term"/>
        <field name="leaderCommit" id="14" type="LogIndex"/>
        <group name="entries" id="15" dimensionType="groupSizeEncoding">
            <field name="creditAccount" id="16" type="AccountId"/>
            <field name="debitAccount" id="17" type="AccountId"/>
            <field name="amount" id="18" type="Amount"/>
        </group>
    </sbe:message>
    <sbe:message name="AppendEntriesResponse" id="19">
        <field name="term" id="20" type="Term"/>
        <field name="success" id="21" type="BooleanType"/>
    </sbe:message>

    <sbe:message name="ClientConnect" id="22">
        <data name="clientChannel" id="23" type="varDataEncoding"/>
    </sbe:message>
    <sbe:message name="ClientResponse" id="24">
        <field name="leaderId" id="25" type="NodeId"/>
    </sbe:message>


    <sbe:message name="BalanceRequest" id="101">
        <field name="correlationId" id="102" type="CorrelationId"/>
        <field name="account" id="103" type="AccountId"/>
    </sbe:message>
    <sbe:message name="BalanceResponse" id="104">
        <field name="correlationId" id="105" type="CorrelationId"/>
        <field name="amount" id="106" type="Amount"/>
    </sbe:message>
    <sbe:message name="TransactionRequest" id="107">
        <field name="correlationId" id="108" type="CorrelationId"/>
        <field name="creditAccount" id="109" type="AccountId"/>
        <field name="debitAccount" id="110" type="AccountId"/>
        <field name="amount" id="111" type="Amount"/>
    </sbe:message>
    <sbe:message name="TransactionResponse" id="112">
        <field name="correlationId" id="113" type="CorrelationId"/>
        <field name="success" id="114" type="BooleanType"/>
    </sbe:message>

</sbe:messageSchema>